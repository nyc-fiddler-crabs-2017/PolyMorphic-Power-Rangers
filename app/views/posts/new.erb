<%= erb :'_errors' %>

<form class="self-margin" action="/posts" method="post" >

  <div class="input-field col s12 m6">
    <input type="text" class="validate" name="posts[title]" >
    <label for="first_name">Title</label>
  </div>


  <div class="row">
      <div class="row">
        <div class="input-field col s12 m6">
          <textarea id="textarea1" class="materialize-textarea" name="posts[question]" ></textarea>
          <label for="textarea1">Question</label>
        </div>
      </div>
  </div>

  <button class="btn waves-effect waves-light orange accent-4 col m4 s10 self-margin-button " type="submit">Submit
    <i class="material-icons right"></i>
  </button>

</form>
